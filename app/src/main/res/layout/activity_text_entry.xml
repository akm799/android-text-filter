<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uk.co.akm.lengthfilter.TextEntryActivity">

    <TextView
        android:id="@+id/text_entry_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="40dp"
        android:text="@string/text_entry_header"/>

    <TextView
        android:id="@+id/text_entry_length_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/text_entry_header"
        android:layout_marginTop="16dp"
        android:text="@string/text_entry_length"/>

    <Spinner
        android:id="@+id/text_entry_max_lengths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_entry_length_header"
        android:layout_alignTop="@id/text_entry_length_header">
    </Spinner>

    <EditText
        android:id="@+id/text_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/text_entry_length_header"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/text_copy_area_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/text_entry"
        android:layout_marginTop="24dp"
        android:text="@string/text_copy_area"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/text_copy_area_header"
        android:layout_marginTop="8dp"/>
</RelativeLayout>
